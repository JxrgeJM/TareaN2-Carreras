@model ProgramacionAvanzadaTareaN2.Presentacion.Models.CarreraViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ingreso de carreras</h1>

 <form asp-action="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Carreras[1].Corredor.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carreras[1].Corredor.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carreras[1].Minutos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carreras[1].Segundos)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for( int i = 0; i < Model.Carreras.Count(); ++i)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Carreras[i].Corredor.Id)
                        <input type="hidden" asp-for="Carreras[i].Corredor.Id" />
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Carreras[i].Corredor.Nombre)
                        <input type="hidden" asp-for="Carreras[i].Corredor.Nombre" />
                    </td>
                    <td>
                        <input asp-for="Carreras[i].Minutos" class="form-control" style="width: 100px" />
                        <span asp-validation-for="Carreras[i].Minutos" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="Carreras[i].Segundos" class="form-control" style="width: 100px"/>
                        <span asp-validation-for="Carreras[i].Segundos" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Agregar" class="btn btn-primary mt-3" />
    </div>
</form>



